<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<% @products.each do |product| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= product.image_url %>
        <%= image_tag(product.image_url) %>
        <div class="caption">
          <h3><%= product.title %></h3>
          <h1><%= product.price %></h1>
          <p><%= product.description %></p>
          <ul>
            <li class="btn btn-primary" type="button"><%= link_to 'Edit',edit_product_path(product) %></li>
              <li class="btn btn-default" role="button"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </div>
    </div>
    
<% end %>
